@model PaymentGateway.Models.TransactionViewModel


@{
    ViewData["Title"] = "Transaction";

    var routes = ViewBag.RouteItems as SelectListItem;
}
<link rel="stylesheet" href="~/css/style.css">

<div class="split-screen-container">
    <div class="right-container">
       <h3>Send Money To <br /> Your Loved Ones</h3>

    </div>
    
    <div class="left-container">
       
        <div class="row">
          
            <div class="col-md-4 mx-auto">

                <form asp-action="Transaction" class="form-container">
                   

                    <fieldset id="page1">
                     
                      
                        <legend class="form-title">Sender's Information</legend>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="originatorConversationId" type="hidden" />
                        <input asp-for="systemTraceAuditNumber" type="hidden" />
                        <input asp-for="CreatedBy" , type="hidden" />
                        <div class="form-group">
                            <label asp-for="SenderName" class="control-label"></label>
                            <input asp-for="SenderName" class="form-control" placeholder="Your name and surname" />
                            <span asp-validation-for="SenderName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SenderID_NO" class="control-label"></label>
                            <input asp-for="SenderID_NO" class="form-control" placeholder="eg 12345678" />
                            <span asp-validation-for="SenderID_NO" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SenderPhone_No" class="control-label"></label>
                            <input asp-for="SenderPhone_No" class="form-control" placeholder="eg +254712345678" />
                            <span asp-validation-for="SenderPhone_No" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SenderSrc_Account" class="control-label"></label>
                            <input asp-for="SenderSrc_Account" class="form-control" placeholder="eg Mpesa" />
                            <span asp-validation-for="SenderSrc_Account" class="text-danger"></span>
                        </div>
                        <div class="form-button" style="display: flex; justify-content: flex-end;">
                            <button type="button" class="button"  onclick="nextPage('page1', 'page2')">Next</button>
                        </div>

                    </fieldset>


                    <fieldset id="page2" style="display: none;">
                        <legend class ="form-title">Receiver's Information</legend>
                        <div class="form-group">
                            <label asp-for="ReceiverName" class="control-label"></label>
                            <input asp-for="ReceiverName" class="form-control" placeholder="Your name and surname" />
                            <span asp-validation-for="ReceiverName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReceiverID_NO" class="control-label"></label>
                            <input asp-for="ReceiverID_NO" class="form-control" placeholder="eg 12345678" />
                            <span asp-validation-for="ReceiverID_NO" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReceiverPhone_No" class="control-label"></label>
                            <input asp-for="ReceiverPhone_No" class="form-control" placeholder="eg +254712345678" />
                            <span asp-validation-for="ReceiverPhone_No" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReceiverDst_Account" class="control-label"></label>
                            <input asp-for="ReceiverDst_Account" class="form-control" placeholder="eg Mpesa" />
                            <span asp-validation-for="ReceiverDst_Account" class="text-danger"></span>
                        </div>
                        <div class="form-button" style="display: flex; justify-content: space-between; margin-top: 20px;">

                            <button type="button" class="button" onclick="previousPage('page2', 'page1')">Previous</button>
                            <button type="button" class=" button" onclick="nextPage('page2', 'page3')">Next</button>
                        </div>
                    </fieldset>


                    <fieldset id="page3" style="display: none;">
                        <legend class="form-title">Transcation Information</legend>
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="reference" class="control-label"></label>
                            <input asp-for="reference" class="form-control" placeholder="eg Shopping" />
                            <span asp-validation-for="reference" class="text-danger"></span>
                        </div>

                        <div class="dropdown-container" style="justify-content: space-between;" >
                            <select id="categoryDropdown"  asp-for="RouteId">
                                <option value="">Select Route</option>

                            </select>

                            <input type="hidden" id="categoryDescriptionInput" asp-for="CategoryDescription" />


                            <select id="channelTypeDropdown" style="margin-bottom:20px" asp-for="ChannelType">
                                <option value="">Select Channel Type</option>
                            </select>
                            <input type="hidden" id="channelDescriptionInput" asp-for="ChannelDescription" />
                        </div>
                      

                        <div class="form-button" style="display: flex; justify-content: space-between; margin-top: 20px;">
                            <button type="button" class=" button" onclick="previousPage('page3', 'page2')">Previous</button>
                            <input type="submit"  value="Transact" class="button" id="submitBtn" />
                        </div>
                    </fieldset>



                    <input type="hidden" id="currentPage" value="page1">

                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            @ViewBag.SuccessMessage
                        </div>
                    }


                </form>
            </div>
        </div>
    </div>


    
     
 </div>

@section scripts{
    <script>
        function nextPage(currentPageId, nextPageId) {

            document.getElementById(currentPageId).style.display = 'none';
            document.getElementById(nextPageId).style.display = 'block';
            document.getElementById('currentPage').value = nextPageId;
            updateProgressIndicator(nextPageId);
        }

        function previousPage(currentPageId, previousPageId) {
            document.getElementById(currentPageId).style.display = 'none';
            document.getElementById(previousPageId).style.display = 'block';
            document.getElementById('currentPage').value = previousPageId;
            updateProgressIndicator(nextPageId);
        }
       

        function submitForm() {

        }
    </script>
    <script>
        $(document).ready(function () {
            LoadRoutes();
            $("#categoryDropdown").change(function () {
                var selectedRouteId = $(this).val();
                var selectedRouteDescription = $("#categoryDropdown option:selected").text();
                $("#categoryDescriptionInput").val(selectedRouteDescription);

                $.ajax({
                    url: "/Transactions/GetChannelTypeByRouteId?id=" + selectedRouteId,
                    type: "GET",
                    success: function (data) {
                        var channelTypeDropdown = $("#channelTypeDropdown");
                        channelTypeDropdown.empty();
                        channelTypeDropdown.append('<option value="">Select a Channel Type</option>');
                        $.each(data, function (index, item) {
                            channelTypeDropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    },
                    error: function () {
                        console.error("Error occurred while loading channel types.");
                    }
                });

            });
            $("#channelTypeDropdown").change(function () {
                var selectedChannelDescription = $("#channelTypeDropdown option:selected").text();
                $("#channelDescriptionInput").val(selectedChannelDescription);
            });

        });

    </script>
    <script>
        function LoadRoutes() {
            $.ajax({
                url: '/transactions/gettransactionroute/',
                type: 'POST',
                error: function (xhr) {
                    console.log("An error occured: " + xhr.status + " " + xhr.statusText);
                },
                success: function (result) {
                    if (result) {
                        var select = $("#categoryDropdown");

                        select.empty();

                        select.append($('<option/>',
                            {
                                value: "",
                                text: "Select Route"
                            }));

                        $.each(result,
                            function (index, itemData) {
                                select.append($('<option/>',
                                    {
                                        value: itemData.value,
                                        text: itemData.text,
                                    }));


                            });
                        console.log(result);

                    }
                }
            });
        }
    </script>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    }
